@model UpdateAboutDto
@{
	ViewData["Title"] = "UpdateAbout";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Anasayfa Hakkımızda İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Hakkımızda Yazı Güncelleme Sayfası</div>
						</div>
						<input type="hidden" asp-for="AboutId"/>
						<div class="card-body">
							<div class="form-group">
								<label for="AboutTitle">Başlık Giriniz</label>
								<input type="text" class="form-control" asp-for="AboutTitle" id="AboutTitle">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="AboutImageUrl">Görsel Url'si Giriniz</label>
								<input type="text" class="form-control" asp-for="AboutImageUrl" id="AboutImageUrl">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="AboutDescription">Açıklama Giriniz</label>
								<textarea rows="5" class="form-control" asp-for="AboutDescription" id="AboutDescription"></textarea>
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success">Hakkımda Yazısını Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

