@model UpdateBookingDto
@{
	ViewData["Title"] = "CreateBooking";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Rezervasyon İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Rezervasyon Girişi</div>
						</div>
						<input type="hidden" asp-for="BookingId" />
						<div class="card-body">
							<div class="form-group">
								<label for="BookingName">Ad Soyad</label>
								<input type="text" class="form-control" asp-for="BookingName" id="BookingName">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="BookingPhone">Telefon</label>
								<input type="number" class="form-control" asp-for="BookingPhone" id="BookingPhone">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="BookingMail">Mail Adresi</label>
								<input type="email" class="form-control" asp-for="BookingMail" id="BookingMail">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="BookingPersonCount">Kişi Sayısı</label>
								<input type="number" class="form-control" asp-for="BookingPersonCount" id="BookingPersonCount">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="BookingDate">Rezervasyon Tarihi</label>
								<input type="date" class="form-control" asp-for="BookingDate" id="BookingDate">
							</div>
						</div>

						<div class="card-action">
							<button class="btn btn-success">Rezervasyonu Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

